{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-3"><strong>Firstname</strong></div>
    <div class="col-md-9">{{ app.user.firstname }}</div>
</div>
<div class="row">
    <div class="col-md-3"><strong>Lastname</strong></div>
    <div class="col-md-9">{{ app.user.lastname }}</div>
</div>
<div class="row">
    <div class="col-md-3"><strong>Birthday</strong></div>
    <div class="col-md-9">{{ app.user.birthday | date('Y-m-d') }}</div>
</div>
{% endblock %}
