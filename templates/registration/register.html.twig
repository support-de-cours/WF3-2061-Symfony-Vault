{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8 offset-md-2">

        <h1>Register</h1>
    
        {{ form_start(registrationForm, {
            attr: {
                novalidate: "novalidate"
            }
        }) }}

            {# Token de securit√© #}
            {{ form_widget(registrationForm._token) }}
    
            {# Email row #}
            <div class="row">
                <div class="col-md-6">
    
                    {# Email #}
                    <div class="mb-3">
                        {{ form_label(registrationForm.email.first) }}
                        {{ form_widget(registrationForm.email.first) }}
                        {{ form_help(registrationForm.email.first) }}
                        {{ form_errors(registrationForm.email.first) }}
                    </div>
    
                </div>
                <div class="col-md-6">
    
                    {# Email Confirmation #}
                    <div class="mb-3">
                        {{ form_label(registrationForm.email.second) }}
                        {{ form_widget(registrationForm.email.second) }}
                        {{ form_help(registrationForm.email.second) }}
                        {{ form_errors(registrationForm.email.second) }}
                    </div>
    
                </div>
            </div>
    
            {# Password row #}

            <div class="row">
                <div class="col-md-6">

                    {# Password #}
                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword.first) }}
                        {{ form_widget(registrationForm.plainPassword.first) }}
                        {{ form_help(registrationForm.plainPassword.first) }}
                        {{ form_errors(registrationForm.plainPassword.first) }}
                    </div>

                </div>
                <div class="col-md-6">

                    {# Password Confirmation #}
                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword.second) }}
                        {{ form_widget(registrationForm.plainPassword.second) }}
                        {{ form_help(registrationForm.plainPassword.second) }}
                        {{ form_errors(registrationForm.plainPassword.second) }}
                    </div>

                </div>
            </div>
    
            {# Firstname #}
            <div class="mb-3">
                {{ form_label(registrationForm.firstname) }}
                {{ form_widget(registrationForm.firstname) }}
                {{ form_help(registrationForm.firstname) }}
                {{ form_errors(registrationForm.firstname) }}
            </div>
            
            
            {# Lastname #}
            <div class="mb-3">
                {{ form_label(registrationForm.lastname) }}
                {{ form_widget(registrationForm.lastname) }}
                {{ form_help(registrationForm.lastname) }}
                {{ form_errors(registrationForm.lastname) }}
            </div>
            
            {# Birthday #}
            <div class="row">
                <div class="col-md-4">

                    {# Birthday Day #}
                    <div class="mb-3">
                        {# {{ form_label(registrationForm.birthday.day) }} #}
                        {{ form_widget(registrationForm.birthday.day) }}
                        {{ form_help(registrationForm.birthday.day) }}
                        {# {{ form_errors(registrationForm.birthday.day) }} #}
                    </div>

                </div>
                <div class="col-md-4">

                    {# Birthday month #}
                    <div class="mb-3">
                        {# {{ form_label(registrationForm.birthday.month) }} #}
                        {{ form_widget(registrationForm.birthday.month) }}
                        {# {{ form_help(registrationForm.birthday.month) }} #}
                        {# {{ form_errors(registrationForm.birthday.month) }} #}
                    </div>

                </div>
                <div class="col-md-4">

                    {# Birthday year #}
                    <div class="mb-3">
                        {# {{ form_label(registrationForm.birthday.year) }} #}
                        {{ form_widget(registrationForm.birthday.year) }}
                        {# {{ form_help(registrationForm.birthday.year) }} #}
                        {# {{ form_errors(registrationForm.birthday.year) }} #}
                    </div>

                </div>
                <div class="col-md-12">
                    {{ form_help(registrationForm.birthday) }}
                    {{ form_errors(registrationForm.birthday) }}
                </div>
            </div>
            
            
            {# Gender #}
            <div class="mb-3">
                {{ form_label(registrationForm.gender) }}
                {{ form_widget(registrationForm.gender) }}
                {{ form_help(registrationForm.gender) }}
                {{ form_errors(registrationForm.gender) }}
            </div>
            
            
            {# Country #}
            <div class="mb-3">
                {{ form_label(registrationForm.country) }}
                {{ form_widget(registrationForm.country) }}
                {{ form_help(registrationForm.country) }}
                {{ form_errors(registrationForm.country) }}
            </div>
            
            
            {# AgreeTerms #}
            {% if registrationForm.agreeTerms is defined %}
            <div class="mb-3">
                {{ form_label(registrationForm.agreeTerms) }}
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_help(registrationForm.agreeTerms) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>
            {% endif %}
            
            <button type="submit" class="btn">Register</button>
    
        {{ form_end(registrationForm, {
            render_rest: false
        }) }}

    </div>
</div>
{% endblock %}
